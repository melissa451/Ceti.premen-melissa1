indiceNota += 2;

}
indiceNota += 2;

}

// Cálculo da média final (média das 1

médias bimestrais)

double somaMedias = 0;

for (double mediaBim:

mediasBimestrais) {

somaMedias += mediaBim;

}
double mediaFinal = somaMedias /

mediasBimestrais.length;

// Determinar situação do aluno String situacao;

